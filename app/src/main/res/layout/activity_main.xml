<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Scanner Icon Button -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_scanner"
                android:contentDescription="@string/content_desc_scanner" />
        </FrameLayout>

        <!-- Title Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_primary"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_secondary"
                android:textColor="@color/muted_gray"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- LIVE Indicator -->
        <LinearLayout
            android:id="@+id/liveIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp">

            <View
                android:id="@+id/liveDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_live_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/live"
                android:textColor="@color/live_red"
                android:textSize="13sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />
        </LinearLayout>

        <!-- Exit Button -->
        <FrameLayout
            android:id="@+id/exitButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_exit"
                android:contentDescription="@string/content_desc_exit" />
        </FrameLayout>
    </LinearLayout>

    <!-- Header separator line -->
    <View
        android:id="@+id/headerSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/header_separator"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <!-- Content Area with Hero Card -->
    <ScrollView
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerSeparator"
        app:layout_constraintBottom_toTopOf="@id/playerControls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <!-- Hero Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/heroCard"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/background_dark">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Hero Image -->
                    <ImageView
                        android:id="@+id/heroImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hero_card_placeholder"
                        android:contentDescription="@string/content_desc_hero_image" />

                    <!-- Gradient Overlay -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_overlay_gradient" />

                    <!-- Text Overlay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/watertown_pd"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/serving_protecting"
                            android:textColor="@color/text_muted"
                            android:textSize="15sp" />
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Footer watermark -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/copyright"
                android:textColor="@color/translucent_white_18"
                android:textSize="12sp" />

            <!-- Stream status (hidden) -->
            <TextView
                android:id="@+id/streamStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/muted_gray"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Player Area -->
    <LinearLayout
        android:id="@+id/playerControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Top separator line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/translucent_white_08" />

        <!-- Scrubber Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Current Time -->
            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_zero"
                android:textColor="@color/muted_gray"
                android:textSize="12sp"
                android:minWidth="36dp" />

            <!-- Progress Bar -->
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:max="100"
                android:progress="0"
                android:enabled="false" />

            <!-- LIVE Badge -->
            <TextView
                android:id="@+id/liveBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="@drawable/bg_live_badge"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Controls Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <!-- Speaker Icon -->
            <ImageButton
                android:id="@+id/speakerButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_speaker"
                android:scaleType="center"
                android:contentDescription="@string/content_desc_speaker" />

            <!-- Refresh Icon -->
            <FrameLayout
                android:id="@+id/refreshButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_control_button"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_refresh"
                    android:contentDescription="@string/content_desc_refresh" />
            </FrameLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Play/Pause Button -->
            <FrameLayout
                android:id="@+id/playPauseButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_play_button"
                android:elevation="8dp"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/playPauseIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pause"
                    android:contentDescription="@string/content_desc_play_pause" />
            </FrameLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 10-Codes Button -->
            <LinearLayout
                android:id="@+id/tenCodesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ten_codes"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_document"
                    android:contentDescription="@string/content_desc_ten_codes_icon" />
            </LinearLayout>
        </LinearLayout>

        <!-- Home indicator area (gesture bar padding) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
